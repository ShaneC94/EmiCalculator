<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_bg"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

<!--    Make sure to go back and change every hard code
        to a string for translation purposes                -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMI Calculator"
                android:textColor="@color/green_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/inputLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Loan Amount"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/green_dark"/>

            <EditText
                android:id="@+id/inputRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Interest Rate (%)"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_dark"/>

            <EditText
                android:id="@+id/inputYears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tenure (Years)"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_dark"/>

            <EditText
                android:id="@+id/inputMonths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tenure (Months)"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_dark"/>

            <TextView
                android:id="@+id/displayEmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/balance_background"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="16dp"/>

            <Button
                android:id="@+id/calculateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find EMI"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_mid"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_mid"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>