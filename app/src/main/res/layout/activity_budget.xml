<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_bg">

    <!--    Make sure to go back and change every hard code
            to a string for translation purposes                -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Balance"
            android:textColor="@color/green_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/inputIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monthly Income"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green_dark"/>

        <EditText
            android:id="@+id/inputExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monthly Expenses"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_dark"/>

        <EditText
            android:id="@+id/inputEmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monthly EMI"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_dark"/>

        <Button
            android:id="@+id/checkBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Check Balance"
            android:layout_marginTop="16dp"
            android:textColor="@color/green_dark"
            android:backgroundTint="@color/green_pale"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/green_dark"
            android:backgroundTint="@color/green_pale"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/viewBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>