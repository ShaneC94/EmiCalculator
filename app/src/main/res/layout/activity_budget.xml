<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_bg"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--    Make sure to go back and change every hard code
                to a string for translation purposes                -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Balance"
                android:textColor="@color/green_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="32dp"/>

            <EditText
                android:id="@+id/inputEmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly EMI"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_dark"/>

            <EditText
                android:id="@+id/inputExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Expenses"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_dark"/>

            <EditText
                android:id="@+id/inputExtraExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add any extra expense"
                android:inputType="numberDecimal"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/green_dark"/>

            <TextView
                android:id="@+id/viewExtraTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Expenses Total: $0.00"
                android:textSize="16sp"
                android:textColor="@color/green_dark"
                android:layout_marginTop="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/green_bg"/>

            <Button
                android:id="@+id/addExpsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Expense"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:backgroundTint="@color/green_mid"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/inputIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Income"
                android:inputType="numberDecimal"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/green_dark"/>

            <TextView
                android:id="@+id/viewBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/balance_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"/>

            <Button
                android:id="@+id/checkBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Balance"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_mid"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_gravity="end"
                android:backgroundTint="@color/green_mid"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>